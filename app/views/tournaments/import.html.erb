<h1>Import tournament data</h1>
<% form_tag insert_tournaments_path, :multipart => true do %>
  <p>
    <%= label_tag "tournament_id", "Tournament:" %>
    <%= select_tag "tournament_id", options_for_select(@tournaments.map { |t| [t.name, t.id] }) %>
  </p>
  <p>
    <%= label_tag "file", "File:" %>
    <%= file_field_tag "file" %>
  </p>
  <p>
    <%= submit_tag "Import" %>
    <%= link_to "Cancel", tournaments_path %>
  </p>
<% end %>
