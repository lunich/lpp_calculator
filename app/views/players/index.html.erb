<table id="players">
  <tbody>
    <tr id="header">
      <th>#</th>
      <th>Name</th>
      <th>Raking</th>
    </tr>
    <% @players.each_with_index do |p, n| %>
      <tr id="player-<%= p.id %>">
        <td><%= n + 1 %>.</td>
        <td><%= p.name %></td>
        <td><%= p.calculated_raking %></td>
      </tr>
    <% end %>
  </tbody>
</table>