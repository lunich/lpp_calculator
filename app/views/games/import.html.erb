<% content_for :title, "Import games from file" %>

<h1>Import games data</h1>
<h2>Import rakings</h2>
<% form_tag insert_games_path, :method => :put, :multipart => true do %>
  <p>
    <%= label_tag "file", "File:" %>
    <%= file_field_tag "file" %>
  </p>
  <p>
    <%= submit_tag "Import" %>
    <%= link_to "Cancel", games_path %>
  </p>
<% end %>
<h2>Import qualifications</h2>
<% form_tag insert_q_games_path, :method => :put, :multipart => true do %>
  <p>
    <%= label_tag "file", "File:" %>
    <%= file_field_tag "file" %>
  </p>
  <p>
    <%= submit_tag "Import" %>
    <%= link_to "Cancel", games_path %>
  </p>
<% end %>
